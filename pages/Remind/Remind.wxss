.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  margin-top: 20px;
  padding: 10px;
}

.picker-container {
  width: 100%;
  margin-bottom: 20px;
  border-bottom: 1px solid #eaeaea;
}

.picker {
  display: flex;
  align-items: center;
  padding: 10px;
  font-size: 16px;
}

.picker-label {
  margin-right: 10px;
  font-weight: bold;
}

.input-container {
  width: 100%;
  margin-bottom: 20px;
}

.alarm-input {
  width: 94%;
  height: 40px;
  border: 1px solid #ddd;
  border-radius: 5px;
  padding: 5px 10px;
  font-size: 14px;
}

.set-alarm-btn {
  width: 100%;
  height: 40px;
  background-image: linear-gradient(to right, #5fdaffa1, #39c0ffe5);
  color: white;
  border-radius: 5px;
  border: none;
  font-size: 16px;
  font-weight: bold;
  transition: background-color 0.3s ease;
}

.set-alarm-btn:hover {
  background-color: #129611; /* Darker shade when hovered */
}

.set-alarm-btn:active {
  background-color: #117508; /* Even darker shade when active */
}
